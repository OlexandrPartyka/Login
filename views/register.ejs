<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="centered" style="height: 100vh; flex-direction: column">
      <form action="/auth/register" method="post">
        <div class="form-item">
          <label>Email</label>
          <div class="input-wrapper">
            <input type="email" id="username" name="username" required />
          </div>
        </div>

        <div class="form-item">
          <label>Password</label>
          <div class="input-wrapper">
            <input type="password" id="password" name="password" required />
            <button type="button" id="eyeball">
              <div class="eye"></div>
            </button>
            <div id="beam"></div>
          </div>
        </div>

        <div class="form-item">
          <label>Retype Password</label>
          <div class="input-wrapper">
            <input type="password" id="password" name="retype" required />
            <button type="button" id="eyeball">
              <div class="eye"></div>
            </button>
            <div id="beam"></div>
          </div>
        </div>

        <button class="styled-button margined" type="submit">Register</button>
      </form>
    </div>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
