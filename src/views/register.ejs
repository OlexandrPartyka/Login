<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <div class="centered" style="height: 100vh; flex-direction: column">
    <form name="authForm" onsubmit="return validateAuthForm()" action="/auth/register" method="post">
      <div class="form-item">
        <label for="email">Email</label>
        <div class="input-wrapper">
          <input type="text" id="email" name="email" autocomplete="email" required />
        </div>
      </div>

      <div class="form-item">
        <label for="password">Password</label>
        <div class="input-wrapper">
          <input type="password" class="password" name="password" autocomplete="new-password" required />
          <button type="button" class="eyeball">
            <div class="eye"></div>
          </button>
          <div class="beam"></div>
        </div>
      </div>

      <div class="form-item">
        <label for="retype">Retype Password</label>
        <div class="input-wrapper">
          <input type="password" class="password" name="retype" autocomplete="new-password" required />
          <button type="button" class="eyeball">
            <div class="eye"></div>
          </button>
          <div class="beam"></div>
        </div>
      </div>

      <button class="styled-button margined" type="submit" id="submit">Register</button>

    </form>
  </div>
  <script src="/javascripts/main.js"></script>
</body>

</html>